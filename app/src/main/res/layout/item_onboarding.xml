<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- TITLE + DESCRIPTION -->
    <LinearLayout
        android:id="@+id/layoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9DC6FF"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- ⭐ FEATURES ONLY ON PAGE 2 -->
    <LinearLayout
        android:id="@+id/layoutFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="480dp"

        android:visibility="gone">

        <!-- Feature 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/se" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan links instantly"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- Feature 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ringing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real-time threat alerts"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- Feature 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/sec" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe browsing protection"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- BOTTOM BUTTONS -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSkip"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="SKIP"
            android:textColor="#00FFFF"
            android:background="@drawable/btn_skip"
            android:layout_alignParentStart="true" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="NEXT"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_next"
            android:animation="@anim/glow_pulse"
            android:layout_alignParentEnd="true" />

        <!-- ⭐ GET STARTED BUTTON ONLY ON PAGE 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetStarted"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:text="GET STARTED"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_next"
            android:layout_centerHorizontal="true"
            android:animation="@anim/glow_pulse"
            android:visibility="gone" />


    </RelativeLayout>

</RelativeLayout>
