<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <!-- Scrollable content -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingHorizontal="20dp"
            android:paddingTop="18dp"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CHECK SAFETY neon box (TOP) -->
                <FrameLayout
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <!-- Neon Polygon (background drawable) -->
                    <ImageView
                        android:id="@+id/cyberPolygon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cyber_polygon_glow"
                        android:contentDescription="Cyber Polygon"
                        android:alpha="0.9" />

                    <!-- Glowing Text -->
                    <TextView
                        android:id="@+id/safetyText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CHECK\nSAFETY"
                        android:textColor="#00FFFF"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="#00FFFF"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="12" />
                </FrameLayout>

                <!-- SPACING -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- SCAN URL CARD -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/scanUrlCard"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="18dp"
                        android:background="@drawable/card_glowa">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">

                            <TextView
                                android:text="Scan a URL"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Enter URL or APK"
                                android:textColor="#5DA9E9"
                                android:textSize="13sp"
                                android:paddingTop="4dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CHECK APP SAFETY CARD -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/appSafetyCard"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    android:layout_gravity="center"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="18dp"
                        android:background="@drawable/card_glowa">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">

                            <TextView
                                android:text="Check App Safety"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Scan Installed Apps"
                                android:textColor="#56C596"
                                android:textSize="13sp"
                                android:paddingTop="4dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- SUBSCRIPTION CARD -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/subscriptionCard"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    android:layout_gravity="center"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="18dp"
                        android:background="@drawable/card_glowa">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">

                            <TextView
                                android:text="Subscription"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Plan: Free (Tap to Upgrade)"
                                android:textColor="#A68CF1"
                                android:textSize="13sp"
                                android:paddingTop="4dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- SAFE WEBSITES CARD -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/safeWebsiteCard"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    android:layout_gravity="center"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="18dp"
                        android:background="@drawable/card_glowa">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">

                            <TextView
                                android:text="Safe Websites"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Browse trusted links"
                                android:textColor="#FFA500"
                                android:textSize="13sp"
                                android:paddingTop="4dp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/browserAnalyticsCard"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    android:layout_gravity="center"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="18dp"
                        android:background="@drawable/card_glowa">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">

                            <TextView
                                android:text="Browser Analytics"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />



                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <!-- OUR SERVICES Title (below safe website and top cards) -->
                <TextView
                    android:id="@+id/titleServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.08"
                    android:paddingStart="4dp"
                    android:text="OUR SERVICES"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Services container: service cards in serial -->
                <LinearLayout
                    android:id="@+id/servicesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Service Card 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:id="@+id/serviceCard1"
                            android:layout_width="290dp"
                            android:layout_height="140dp"
                            android:background="@drawable/card_glow"
                            android:orientation="horizontal"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/security"
                                android:tint="#00FFFF"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Security Audits and Assessments"
                                    android:textColor="#FFFFFF"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="A formal evaluation to find vulnerabilities and compliance gaps."
                                    android:textColor="#D0CFEF"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Service Card 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:id="@+id/serviceCard2"
                            android:layout_width="290dp"
                            android:layout_height="140dp"
                            android:background="@drawable/card_glow"
                            android:orientation="horizontal"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_eye"
                                android:tint="#00FFFF"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Managed Security Services"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginTop="6dp"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24/7 monitoring, patching, and proactive threat hunting for enhanced protection."
                                    android:textColor="#D0CFEF"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Service Card 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="18dp">

                        <LinearLayout
                            android:id="@+id/serviceCard3"
                            android:layout_width="290dp"
                            android:layout_height="140dp"
                            android:background="@drawable/card_glow"
                            android:orientation="horizontal"
                            android:padding="14dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_bug"
                                android:tint="#00FFFF"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Incident Response and Recovery"
                                    android:textColor="#FFFFFF"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fast containment, forensic analysis, and service restoration to minimize damage."
                                    android:textColor="#D0CFEF"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout> <!-- end servicesContainer -->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_bg"
        app:itemTextColor="@color/drawer_text"
        app:itemIconTint="@color/drawer_text"
        app:menu="@menu/drawer"
        app:headerLayout="@layout/nav_header"
        style="@style/CustomNavigationViewStyle" />

</androidx.drawerlayout.widget.DrawerLayout>
