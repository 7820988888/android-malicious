                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#00FFFF"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:layout_marginBottom="15dp" />

            <!-- ðŸ”¹ Description -->
            <TextView
                android:id="@+id/descText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SafeLink is a smart cybersecurity tool that protects users from phishing, scam, and unsafe websites. Our advanced detection engine scans every link in real-time and alerts users immediately if a URL is suspicious or malicious.\n\nIt is designed to ensure your online journey remains safe, secure, and free from digital threats."
                android:textSize="14sp"
                android:textColor="#E0E0E0"
                android:lineSpacingExtra="4dp"
