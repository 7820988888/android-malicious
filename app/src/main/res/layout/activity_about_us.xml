                android:text="Our Mission"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#00FFFF"
                android:layout_marginBottom="10dp" />

            <!-- ðŸ”¹ Mission Text -->
            <TextView
                android:id="@+id/missionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To build a safer digital experience for everyone through intelligent link detection, instant protection, and proactive threat prevention."
                android:textSize="14sp"
                android:textColor="#E0E0E0"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="25dp" />

            <!-- ðŸ”¹ Vision Header -->
            <TextView
                android:id="@+id/visionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Vision"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#00FFFF"
                android:layout_marginBottom="10dp" />

            <!-- ðŸ”¹ Vision Text -->
            <TextView
                android:id="@+id/visionText"
                android:layout_width="match_parent"
