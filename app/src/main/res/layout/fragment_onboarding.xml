<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A18">

    <!-- Background image -->
    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- Title + Description (center) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO SAFELINK"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECURE YOUR DEVICE INSTANTLY"
            android:textColor="#9DC6FF"
            android:layout_marginTop="4dp"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Buttons bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="SKIP"
            android:textColor="#00FFFF"
            android:background="@drawable/btn_skip" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="NEXT"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_next" />
    </LinearLayout>

</RelativeLayout>
