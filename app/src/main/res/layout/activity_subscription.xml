<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black">

    <!-- Transparent Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/customBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF"
            android:contentDescription="Back Button"
            android:layout_gravity="start|center_vertical" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Subscription Content -->
    <ScrollView
        android:layout_below="@id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title (Uppercase & Two Lines) -->
            <TextView
                android:id="@+id/subscriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHOOSE A\nSUBSCRIPTION PLAN"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="24dp" />

            <!-- Free Trial Plan Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:background="@drawable/premium_card_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Trial Plan"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First 10 URLs Free"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/selectFreeTrial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:theme="@style/ThemeOverlay.AppCompat" />
            </LinearLayout>

            <!-- Monthly Plan Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:background="@drawable/premium_card_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Plan"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹200 / month"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/selectMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:theme="@style/ThemeOverlay.AppCompat" />
            </LinearLayout>

            <!-- Pro Plan Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:background="@drawable/premium_card_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pro Plan"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹350 / 3 months"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/selectPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#9C27B0"
                    android:textColor="@android:color/white"
                    android:theme="@style/ThemeOverlay.AppCompat" />
            </LinearLayout>

            <!-- Terms -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By subscribing, you agree to our Terms of Service and Privacy Policy."
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
