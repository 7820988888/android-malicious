<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Registration"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="20dp" />

        <!-- Child Email -->
        <EditText
            android:id="@+id/childEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Child Email"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="10dp" />

        <!-- Child Password -->
        <EditText
            android:id="@+id/childPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Child Password"
            android:inputType="textPassword"
            android:padding="14dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="10dp" />

        <!-- Parent Code -->
        <EditText
            android:id="@+id/parentCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parent 6-digit Code"
            android:inputType="number"
            android:maxLength="6"
            android:padding="14dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="10dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/childRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Child"
            android:layout_marginTop="20dp"
            android:padding="14dp" />

    </LinearLayout>

</ScrollView>
